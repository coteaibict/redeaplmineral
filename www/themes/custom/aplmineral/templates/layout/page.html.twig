      </div>
      <button class="banner-event__toggle">
        <span>Ver mais</span>
      </button>
    </div>
  </div> -->


  {{ page.primary_menu }}
  {{ page.secondary_menu }}
  {{ page.breadcrumb }}
  {{ page.highlighted }}
  {{ page.help }}

  <div class="mobile-toolbar">
    <ul class="mobile-toolbar-menu">
      <li>
        <a href="#" title="Menu" class="mobile-toolbar__hamburger">
          <span>Menu</span>
        </a>
      </li>
      <li>
        <a href="{{ path('<front>') }}" title="{{ 'Home'|t }}" rel="home" class="mobile-toolbar__home">
          <span>Página inicial</span>
        </a>
      </li>
      <li>
        <a href="#" title="Pesquisa" class="mobile-toolbar__search">
          <span>Pesquisa</span>
        </a>
      </li>
    </ul>
    <div class="mobile-toolbar-layer mobile-toolbar-layer--search">
      {{ page.mobile_search }}
    </div>
    <div class="mobile-toolbar-layer mobile-toolbar-layer--menu">
      <div class="container">
        {{ page.main_navigation }}
      </div>
    </div>
  </div>

  <main id="main-content">
    <div class="layout-container">
      <div class="layout-sidebar">
        {{ page.main_navigation }}
      </div>
      <div class="layout-content">
        {{ page.content }}
      </div>
    </div>
  </main>

  <footer class="footer" id="footer">
    <div class="footer__inner">
      <ul class="footer__logos">
        <li><img src="{{ base_path }}themes/custom/aplmineral/assets/img/footer/logo_footer_1.svg" alt="" /></li>
        <li><img src="{{ base_path }}themes/custom/aplmineral/assets/img/footer/logo_footer_2.svg" alt="" /></li>
        <li><img src="{{ base_path }}themes/custom/aplmineral/assets/img/footer/logo_footer_3.svg" alt="" /></li>
        <li><img src="{{ base_path }}themes/custom/aplmineral/assets/img/footer/logo_footer_4.svg" alt="" /></li>
        <li><img src="{{ base_path }}themes/custom/aplmineral/assets/img/footer/logo_footer_5.svg" alt="" /></li>
